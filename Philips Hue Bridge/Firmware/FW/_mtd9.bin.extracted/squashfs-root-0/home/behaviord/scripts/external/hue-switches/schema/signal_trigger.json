{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "signal_trigger.json#",
  "type": "object",
  "properties": {
    "sounds": {
      "type": "array",
      "description": "This array !implicitly! maps one-to-one with the array defined in button_action.json:sound_targets",
      "items": {
        "$ref": "sound_type.json#"
      }
    },
    "lights": {
      "type": "array",
      "description": "This array !implicitly! maps one-to-one with the array defined in button_action.json:where",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "on_off_color",
              "on_off",
              "alternating"
            ],
            "type": "string"
          },
          "duration": {
            "$ref": "hue-core/time_span.json#"
          },
          "colors": {
            "type": "array",
            "minItems": 1,
            "maxItems": 2,
            "items": {
              "type": "object",
              "properties": {
                "xy": {
                  "type": "object",
                  "properties": {
                    "x": {
                      "type": "number"
                    },
                    "y": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "x",
                    "y"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "xy"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "type",
          "duration"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}