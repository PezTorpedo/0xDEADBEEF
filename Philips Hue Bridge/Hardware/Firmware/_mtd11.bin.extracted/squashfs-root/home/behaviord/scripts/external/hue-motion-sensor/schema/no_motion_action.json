{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "no_motion_action.json#",
  "type": "object",
  "properties": {
    "after": {
      "$ref": "hue-core/time_span.json#"
    },
    "recall_single": {
      "type": "array",
      "description": "This array !implicitly! maps one-to-one with the array defined in where.json",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "all_off",
              "previous_state",
              "do_nothing"
            ]
          }
        },
        "required": [
          "action"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "after",
    "recall_single"
  ],
  "additionalProperties": false
}