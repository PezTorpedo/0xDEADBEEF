{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "time.json#",
  "type": "object",
  "properties": {
    "hour": {
      "type": "integer",
      "minimum": 0,
      "maximum": 23
    },
    "minute": {
      "type": "integer",
      "minimum": 0,
      "maximum": 59,
      "default": 0
    },
    "second": {
      "type": "integer",
      "minimum": 0,
      "maximum": 59,
      "default": 0
    }
  },
  "required": [
    "hour",
    "minute"
  ],
  "additionalProperties": false
}